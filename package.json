{
  "name": "node-react-docker-compose",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "cd scripts && node setup.js",
    "dev": "yarn docker:dev",
    "start": "yarn docker:prod",
    "lint": "yarn run-s lint:css lint:ts -c",
    "lint:ts": "eslint client server --ext .ts,.tsx",
    "lint:css": "npx stylelint -f verbose -q client/**/*.scss",
    "fix": "yarn run-s fix:css fix:ts -c",
    "fix:ts": "eslint client server --ext .ts,.tsx --fix",
    "fix:css": "npx stylelint -f verbose -q client/**/*.scss --fix",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "docker:kill": "docker-compose kill",
    "docker:dev": "yarn docker:kill && docker-compose up --build --remove-orphans",
    "docker:prod": "yarn docker:kill && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build --remove-orphans",
    "sh:server": "docker exec -it fs_server sh",
    "sh:database": "docker exec -it fs_database psql -H postgres -- U",
    "sh:redis": "docker exec -it fs_redis redis-cli"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "yarn fix:ts"
    ],
    "*.+(css|scss)": [
      "yarn fix:css"
    ]
  },
  "author": "Stuart Haas",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chalk": "^4.1.0",
    "cli-select": "^1.1.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "typescript": "^4.0.3"
  }
}
